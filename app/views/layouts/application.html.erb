<!DOCTYPE html>
<html>
  <head>
    <title>Pocketravel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-inverse" style="background-color:#48d1cc;">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<h3><%= link_to "Pocketravel", posts_path, :style=>"color:#ffffff;" %></h3>
			</div>
  	<div class="collapse navbar-collapse" id="navbarEexample7">
				<ul class="nav navbar-nav navbar-right">
					<div class="social">
						<% if user_signed_in? %>
							<li class="nav-list-item"><%= link_to "＋", new_post_path , :style=>"color:#ffffff;"%></li>
							<li class="nav-list-item"><%= link_to "マイページ", user_path(current_user), :style=>"color:#ffffff;" %></li>
							<li class="nav-list-item"><%= link_to "お気に入りリスト", favorites_path, :style=>"color:#ffffff;" %></li>
							<li class="nav-list-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, :style=>"color:#ffffff;" %></li>
	          <% else %>
	          	<li class="nav-list-item"><%= link_to "About", home_about_path, :style=>"color:#ffffff;" %></li>
							<li class="nav-list-item"><%= link_to "新規登録", new_user_registration_path, :style=>"color:#ffffff;" %></li>
							<li class="nav-list-item"><%= link_to "ログイン", new_user_session_path, :style=>"color:#ffffff;" %></li>
						<% end %>

					</div>
				</ul>
			</div>
		</div>
	</nav>
  <body>
    <%= yield %>
  </body>
</html>
